        <div class="page-indicator">
            <span class="slide-number">02</span> / 02
        </div>

        <div class="nav-controls nav-prev" onclick="window.location.href='new_page1.html'">‹</div>
        <div class="nav-controls nav-next">›</div>
    </div>
    <script>
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowLeft') {
